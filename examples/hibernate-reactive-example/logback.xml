<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

    <property name="APPLICATION_NAME" value="${APPLICATION_NAME}" scope="context"/>
    <property name="basePath" value="./data/log"/>
    <property name="fileName" value="app"/>

    <conversionRule conversionWord="vcl"
                    converterClass="io.reactiverse.contextual.logging.logback.LogbackConverter"/>x

    <property name="LOG_PATTERN"
              value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] ${LOG_LEVEL_PATTERN:-%5p} ${PID:- } --- [%25t] [%-40.40logger{1}] [%vcl{trace_id}---%X{trace_id}] [%vcl{operation_name}---%X{operation_name}] %m%n\n"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                ${LOG_PATTERN}
            </Pattern>
        </layout>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="org.hibernate.SQL" level="debug"/>

    <logger name="org.hibernate.orm.jdbc.bind" level="trace"/>
    <!-- <logger name="org.hibernate.orm.jdbc.extract" level="trace"/> -->

    <logger name="org.hibernate" level="info"/>

    <logger name="com.p6spy" level="debug"/>


</configuration>
